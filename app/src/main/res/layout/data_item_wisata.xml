<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewWisata"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/grey"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ivGambar"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary"
            android:src="@drawable/ic_launcher_background"
            android:text="Gambar Wisata"
            android:textSize="20dp" />


        <!--            <TextView-->
        <!--                android:id="@+id/tvId"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="ID Wisata"-->
        <!--                android:textSize="20dp" />-->

        <TextView
            android:id="@+id/tvNamaWisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Wisata"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvHargaTiket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Harga Tiket Wisata"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategori Wisata"
            android:textSize="20dp" />

        <!--            <TextView-->
        <!--                android:id="@+id/tvDeskripsi"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="Deskripsi Wisata"-->
        <!--                android:textSize="20dp" />-->

        <TextView
            android:id="@+id/tvLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi Wisata"
            android:textSize="20dp" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>