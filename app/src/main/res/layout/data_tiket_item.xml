<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txt_nama_wisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="Nama Wisata : Kawah Ijen"
            android:textColor="@color/blackfont" />

        <TextView
            android:id="@+id/txt_tgl_transaksi_tiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Tanggal Transaksi : 12-12-2022" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_jumlah_tiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Jumlah tiket : 5" />

            <TextView
                android:id="@+id/txt_total_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="- Rp. 500000"
                android:textColor="@color/blackfont" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:text="Belum Dibayar"
                android:textColor="@color/blackfont" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Tf Ke: 081208"
                android:id="@+id/txt_no_rekening"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/poppinsmedium"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_no_hp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_hubungi"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_tiket"
            android:fontFamily="@font/poppinsmedium"
            android:text="Hubungi Pengelola"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.cardview.widget.CardView>